{% extends "en_base.twig" %}

{% block title %}About Us{% endblock %}

{% block meta_tag %}{{ elements.aboutmeta.meta_tag }} {% endblock %}
{% block meta_description %}{{ elements.aboutmeta.meta_description }} {% endblock %}

{% block body %}
    {{ include('_templates/en_header.twig') }}

<section class="about-slide-show">
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <div class="description hidden-xs">
                    <p style="font-size: 16.84pt; color: #0e284b;">The wise choice to trade</p>
                    <p style="font-size: 38.95pt; color: #83c5ec;">Import & Exporte</p>
                    <p style="font-size: 38.95pt; color: #939598;">Machinery</p>
                    <p style="font-size: 24.23pt; color: #0e284b;">Poultry equipment</p>
                    <p style="font-size: 21.58pt; color: #c7c8ca;">Food industry equipment</p>
                    <p style="font-size: 38.95pt; color: #83c5ec;">Customs Service</p>
                </div>
            </div>
            <div class="col-sm-7">
                <div class="slide-show" style="display: none">
                    <div class="slider-for">
                        {% for media in medias %}
                            <a href="{{ url('uploads') }}/{{ media.file }}">
                                <img src="{{ url('uploads') }}/{{ media.file }}" alt="{{ media.alt }}">
                            </a>
                        {% endfor %}

                    </div>
                    <div class="slider-nav hidden-xs">
                        {% for media in medias %}
                            <img src="{{ url('uploads') }}/{{ media.file }}" alt="{{ media.alt }}">
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    <section class="about-desc">
        <div class="container">
            <div class="about-wrapper">
            <div class="about-text">
                <h3>About Us:</h3>
                <br>
                <div class="about-content">{{ elements.about_info.about_desc|raw }}</div>
            </div>
            </div>
        </div>
    </section>

    {% if employees|length > 0 %}
        <section class="employees">

            <div class="container">
                <div class="header">
                    {#<div class="gradient">#}
                    <div class="image layer">
                        {#<img src="../../public/images/memberheader.jpg" alt="">#}
                    </div>
                    {#</div>#}
                    <div class="title">employees</div>
                </div>

                {% for employee in employees %}
                    <div class="flex-container">
                        <div class="picture">
                            <div class="card-panel">
                                <div class="image">
                                    <img src="{{ url('uploads') }}/{{ employee.image }}" alt="{{ employee.department }}"
                                         class="">
                                </div>
                            </div>
                        </div>
                        <div class="information">
                            <div class="body-information">
                                <div class="name_family">{{ employee.name }} {{ employee.family }}</div>
                                <div class="department"><i class="fa fa-sitemap"></i>{{ employee.department }}</div>
                                <div class="email"><i class="fa fa-envelope-open"></i>{{ employee.email }}</div>
                                <div class="phone"><i class="fa fa-phone"></i>
                                    +{{ employee.phone [:2] }} {{ employee.phone [2:3] }} {{ employee.phone [5:3] }} {{ employee.phone [8:2] }} {{ employee.phone [10:] }}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </section>
    {% endif %}




    {{ include('_templates/en_footer.twig') }}


{% endblock %}


{% block script %}

    <script>
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav',
            autoplay: true
        });
        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            centerMode: true,
            focusOnSelect: true
        });

        $('.slide-show').show()


    </script>

    <script type="text/javascript">
        $('.slider-for').slickLightbox();
    </script>

{% endblock %}
