{% extends "en_base.twig" %}

{% block title %}News{% endblock %}
{% block meta_tag %}{{ elements.newsmeta.meta_tag }} {% endblock %}
{% block meta_description %}{{ elements.newsmeta.meta_description }} {% endblock %}

{% block head %}
    <link rel="stylesheet" href="/css/news.css">

{% endblock %}

{% block body %}

    {{ include('_templates/en_header.twig') }}

         <section class="news">
             <div class="cards">

                 {% if newses|length > 0 %}
                     {% for news in newses %}

                         <div class="card">
                             <img src="{{ url('uploads') }}/{{ news.image }}" alt="{{ news.alt }}">
                             <div class="card-title">
                                 <a href="#" class="toggle-info btn">
                                     <span class="left"></span>
                                     <span class="right"></span>
                                 </a>
                                 <h2>
                                     {{ news.title }}
                                     <small>{{ news.created_at }}</small>
                                 </h2>
                             </div>
                             <div class="card-flap flap1">
                                 <div class="card-description">
                                     {{ news.description|raw }}
                                 </div>
                                 <div class="card-flap flap2">
                                     <div class="card-actions">
                                         <a type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#{{ news.id }}">Read more</a>
                                     </div>
                                 </div>
                             </div>
                         </div>

                         <!-- Modal -->
                         <div class="modal fade" id="{{ news.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                             <div class="modal-dialog" role="document">
                                 <div class="modal-content">
                                     <div class="modal-header">
                                         <h4 class="modal-title pull-left" id="myModalLabel">{{ news.title }}</h4>
                                         <h4 class="modal-title pull-right" id="myModalLabel">{{ news.created_at }}</h4>
                                     </div>
                                     <div class="modal-body">

                                         <div class="description">
                                             {{ news.description|raw }}
                                         </div>

                                         <div class="news-image">
                                             <img src="{{ url('uploads') }}/{{ news.image }}" alt="{{ news.alt }}">

                                         </div>
                                     </div>

                                     <div class="modal-footer">
                                         <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                         {#<button type="button" class="btn btn-primary">Save changes</button>#}
                                     </div>
                                 </div>
                             </div>
                         </div>

                     {% endfor %}
                 {% else %}
                     There is no news yet
                 {% endif %}

             </div>
         </section>

    <!-- Button trigger modal -->





    {{ include('_templates/en_footer.twig') }}


{% endblock %}


{% block script %}



{% endblock %}
