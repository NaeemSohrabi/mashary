{% extends "Admin/base.twig" %}

{% block title %}Contaact Edit{% endblock %}


{% block body %}
    <!--Content Editor-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">مدیریت ارتباط با ما</h1>
            <div class="panel panel-default">
                <div class="panel-heading">
                    ویرایش اطلاعات
                </div>
                <div class="panel-body">
                    <br>
                    <div class="contact">
                        <form action="/admin/contact/update" class="form-horizontal" method="post"
                              enctype="multipart/form-data">
                            <input type="hidden" class="form-control" name="id" value="{{contact.id}}">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">نام انگلیسی دفتر: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="en_name" value="{{contact.en_name}}" placeholder="نام انگلیسی">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">نام عربی دفتر: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="fa_name" value="{{contact.fa_name}}" placeholder="نام عربی">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">شماره تلفن: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" dir="ltr" name="phone" value="{{contact.phone}}" placeholder="تلفن">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">شماره فکس: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" dir="ltr" name="fax" value="{{contact.fax}}" placeholder="فکس">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">شماره موبایل: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" dir="ltr" name="mobile" value="{{contact.mobile}}" placeholder="موبایل">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">ایمیل: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control"  name="email" value="{{contact.email}}" placeholder="ایمیل">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">وب سایت: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" name="web" value="{{contact.web}}" placeholder="ایمیل">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">آدرس انگلیسی: </label>
                                <div class="col-sm-6">
                                    <textarea name="en_address" id="" class="form-control" rows="10" placeholder="آدرس به انگلیسی">{{contact.en_address}}</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">آدرس عربی: </label>
                                <div class="col-sm-6">
                                    <textarea name="fa_address" id="" class="form-control" rows="10" placeholder="آدرس به عربی">{{contact.fa_address}}</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">lat: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" dir="ltr" name="lat" value="{{contact.lat}}" placeholder="مختصات">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">lang: </label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" dir="ltr" name="lng" value="{{contact.lng}}" placeholder="مختصات">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-3 col-sm-offset-2">
                                    <button type="submit" class="btn btn-success">بارگذاری</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block script %}

    <script>
        function openLanguage(evt, language) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(language).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>


{% endblock %}
